import math
print('Введите внутр. диаметр трубы(в мм.)')
v = float(input())
print('Введите длину трубы(в мм.)')
l = float(input())
print('Обьем трубы:', round((math.pi * (v/2)**2 * l), 1), 'мм3 или', round((math.pi * (v/2)**2 * l) / 1000000, 1), 'л,', 'площадь поверхности трубы:', round((2 * math.pi * (v/2) * l) / 1000000, 1), 'м2')